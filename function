import turtle

govind_turtle = turtle.Turtle()

def square():       ##defining a function

  govind_turtle.forward(100)
  govind_turtle.right(90)
  govind_turtle.forward(100)
  govind_turtle.right(90)
  govind_turtle.forward(100)
  govind_turtle.right(90)
  govind_turtle.forward(100)

square()                            //calling a fucntion
govind_turtle.forward(150)
square()
govind_turtle.forward(150)
square()
govind_turtle.forward(150)
square()
govind_turtle.forward(150)
